<load file="__PUBLIC__/header.html">
		<title>修改分类</title>
		<link rel="stylesheet" type="text/css" href="__PUBLIC__/Css/add_category.css">
	</head>
	<body>
		<form action="{|U('Admin/Category/edit_cate')}" method="post">
			<table class="tab">
				<tr>
					<td class="th" colspan="2">修改分类</td>
				</tr>
				<tr>
					<td>中文分类名称</td>
					<td>
						<input type="text" name="cntitle" value="{$cate.cntitle}">
						<input type="hidden"  name="cid" value="{$hd.get.cid}">
					</td>
				</tr>
				<tr>
					<td>英文分类名称</td>
					<td>
						<input type="text" name="entitle" value="{$cate.entitle}">
					</td>
				</tr>
				<tr>
					<td colspan="2">
						<input type="submit" value="修改" class="input_button">
						<input type="reset" class="input_button">
					</td>
				</tr>
			</table>
		</form>
	</body>
</html>