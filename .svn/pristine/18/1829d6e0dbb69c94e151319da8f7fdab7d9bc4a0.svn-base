<load file="__PUBLIC__/header.html">
		<title>添加子分类</title>
		<link rel="stylesheet" type="text/css" href="__PUBLIC__/Css/add_category.css">
	</head>
	<body>
		<form action="{|U('Admin/Category/add_cate')}" method="post">
			<table class="tab">
				<thead>
				</thead>
				<tbody>
					<tr>
						<th class="th" colspan="2">添加子分类</th>
					</tr>
					<tr>
						<td>子类中文名称</td>
						<td>
							<input type="text" name="cntitle">
							<input type="hidden" name="pid" value="{$hd.get.cid}">
						</td>
					</tr>
					<tr>
						<td>子类英文名称</td>
						<td>
							<input type="text" name="entitle">
						</td>
					</tr>
					<tr>
						<td colspan="2">
							<input type="submit" value="添加" class="input_button">
							<input type="reset" class="input_button">
						</td>
					</tr>
				</tbody>
			</table>
		</form>
	</body>
</html>